<?php if ($this->numArticles > 0) : ?>
<div class="contentWidgetsArticlesList">
	<?php if ($this->title) : ?><h2><?php echo $this->title; ?></h2><?php endif; ?>
	
	<ul>
		<?php foreach ($this->articles as $article) : ?>
		<li>
			<p>
				<a href="<?php echo $article->getViewUrl(); ?>" title="<?php echo addslashes($article->title); ?>"><img src="<?php echo $article->getCover('thumbnail'); ?>" title="<?php echo addslashes($article->getCoverTitle()); ?>" /></a>
			</p>
			<div>
				<h3><a href="<?php echo $article->getViewUrl(); ?>"><?php echo $article->title; ?></a></h3>
				<span>
					<?php echo $this->dateFormatter()->diff(strtotime($article->activated_date), $this->timeDiffFormats); ?>
				</span>
			</div>
		</li>
		<?php endforeach; ?>
	</ul>
</div>
<?php endif; ?>
