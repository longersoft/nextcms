<?php if ($this->numArticles > 0) : ?>
<div class="contentWidgetsArticlesMostCommented">
	<h2><?php if ($this->title) : ?><?php echo $this->title; ?><?php else : ?><?php echo $this->translator()->_('show.mostCommented'); ?><?php endif; ?></h2>
	
	<ul>
		<?php foreach ($this->articles as $article) : ?>
		<li>
			<p><?php echo $article->num_comments; ?></p>
			<div>
				<h3><a href="<?php echo $article->getViewUrl(); ?>"><?php echo $article->title; ?></a></h3>
				<span>
					<?php echo sprintf($this->translator()->_('show.by'), $article->getAuthor()); ?> <span>|</span> <?php echo $this->dateFormatter()->diff(strtotime($article->activated_date), $this->timeDiffFormats); ?>
				</span>
			</div>
		</li>
		<?php endforeach; ?>
	</ul>
</div>
<?php endif; ?>
