?>

<?php if ($this->numArticles > 0) : ?>
<div class="contentWidgetsArticlesMix">
	<?php if ($this->title) : ?><h1><?php echo $this->title; ?></h1><?php endif; ?>
	<?php if ($this->category) : ?><h1><a href="<?php echo $this->url($this->category->getProperties(), 'content_article_category'); ?>"><?php echo $this->category->name; ?></a><a class="iconRss" href="<?php echo $this->url(array_merge(array('feed_format' => 'atom', 'type' => $this->type), $this->category->getProperties()), 'content_feed_category'); ?>"></a></h1><?php endif; ?>
	
	<div class="main">
		<div class="thumb">
			<a href="<?php echo $this->articles[0]->getViewUrl(); ?>" title="<?php echo addslashes($this->articles[0]->title); ?>"><img src="<?php echo $this->articles[0]->getCover('medium'); ?>" title="<?php echo addslashes($this->articles[0]->getCoverTitle()); ?>" /></a>
			<?php if ($this->articles[0]->image_icon) : ?>
			<span class="icon"><span class="iconImage"></span></span>
			<?php elseif ($this->articles[0]->video_icon) : ?>
			<span class="icon"><span class="iconVideo"></span></span>
			<?php endif; ?>
		</div>
		<div class="summary">
			<h2><a href="<?php echo $this->articles[0]->getViewUrl(); ?>" title="<?php echo addslashes($this->articles[0]->title); ?>"><?php echo $this->articles[0]->title; ?></a></h2>
			<span class="meta">
				<?php echo sprintf($this->translator()->_('show.by'), $this->articles[0]->getAuthor()); ?> <span>|</span> <?php echo $this->dateFormatter()->diff(strtotime($this->articles[0]->activated_date), $this->timeDiffFormats); ?> <span>|</span> <?php echo sprintf($this->translator()->_('show.numComments'), $this->articles[0]->num_comments); ?>
			</span>
			<p class="desc"><?php echo $this->articles[0]->description; ?></p>
			<a class="more" href="<?php echo $this->articles[0]->getViewUrl(); ?>" title="<?php echo addslashes($this->articles[0]->title); ?>"><?php echo $this->translator()->_('show.more'); ?></a>
		</div>		
	</div>
	
	<ul>
		<?php for ($i = 1; $i < $this->numArticles; $i++) : ?>
		<li>
			<div class="thumb">
				<a href="<?php echo $this->articles[$i]->getViewUrl(); ?>" title="<?php echo addslashes($this->articles[$i]->title); ?>"><img src="<?php echo $this->articles[$i]->getCover('small'); ?>" title="<?php echo addslashes($this->articles[$i]->getCoverTitle()); ?>" /></a>
				<?php if ($this->articles[$i]->image_icon) : ?>
				<span class="icon"><span class="iconImage"></span></span>
				<?php elseif ($this->articles[$i]->video_icon) : ?>
				<span class="icon"><span class="iconVideo"></span></span>
				<?php endif; ?>
			</div>
			<div class="summary">
				<h3><a href="<?php echo $this->articles[$i]->getViewUrl(); ?>" title="<?php echo addslashes($this->articles[$i]->title); ?>"><?php echo $this->articles[$i]->title; ?></a></h3>
				<span class="meta">
					<?php echo sprintf($this->translator()->_('show.by'), $this->articles[$i]->getAuthor()); ?><br />
					<?php echo $this->dateFormatter()->diff(strtotime($this->articles[$i]->activated_date), $this->timeDiffFormats); ?> <span>|</span> <?php echo sprintf($this->translator()->_('show.numComments'), $this->articles[$i]->num_comments); ?>
				</span>
			</div>
		</li>
		<?php endfor; ?>
	</ul>
</div>
<?php endif; ?>
