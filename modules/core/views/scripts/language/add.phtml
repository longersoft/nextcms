<form id="coreLanguageAddForm" data-dojo-type="dijit.form.Form" data-dojo-props="action: '', method: 'POST', class: 'appForm'">
	<script type="dojo/method" data-dojo-event="onSubmit" data-dojo-args="e">
	e.preventDefault();
	var _this = this;
	if (_this.validate()) {
		dojo.xhrPost({
			url: "<?php echo $this->url(array(), 'core_language_add'); ?>",
			content: dojo.formToObject("coreLanguageAddForm"),
			handleAs: "json",
			load: function(data) {
				_this.reset();
				dojo.publish("/app/core/language/add/onComplete", [ data ]);
			}
		});
	}
	</script>
	
	<div class="appFormRow">
		<label for="path"><?php echo $this->translator()->_('language._share.path'); ?>:</label>
		<input data-dojo-type="dijit.form.TextBox" data-dojo-props="type: 'text', name: 'path', style: 'width: 250px', readOnly: true, value: '<?php echo addslashes($this->path); ?>'" />
	</div>
	
	<div class="appFormRow">
		<label for="key"><?php echo $this->translator()->_('language._share.key'); ?>:</label>
		<input data-dojo-type="dijit.form.ValidationTextBox" data-dojo-props="type: 'text', name: 'key', style: 'width: 250px', required: true, missingMessage: '<?php echo $this->translator(true)->_('language._share.keyRequired'); ?>'" />
	</div>
	
	<div class="appFormRow">
		<label for="text"><?php echo $this->translator()->_('language._share.text'); ?>:</label>
		<input data-dojo-type="dijit.form.SimpleTextarea" data-dojo-props="type: 'text', name: 'text', style: 'width: 250px; height: 50px', required: true, missingMessage: '<?php echo $this->translator(true)->_('language._share.textRequired'); ?>'" />
	</div>
	
	<div class="dijitDialogPaneActionBar">
		<button data-dojo-type="dijit.form.Button" data-dojo-props="type: 'submit'">
			<?php echo $this->translator()->_('global._share.addAction'); ?>
		</button>
		
		<button data-dojo-type="dijit.form.Button" data-dojo-props="type: 'button'">
			<?php echo $this->translator()->_('global._share.cancelAction'); ?>
			<script type="dojo/method" data-dojo-event="onClick" data-dojo-args="e">
			dojo.publish("/app/core/language/add/onCancel");
			</script>
		</button>
	</div>
	
	<input type="hidden" name="format" value="json" />
	<input type="hidden" name="file" value="<?php echo addslashes($this->file); ?>" />
</form>

