<?php 
$this->headTitle()->set($this->translator()->_('user.delete.title'));
?>

<?php if (!$this->user) : ?>
	<div><?php echo $this->translator()->_('user.delete.notFound'); ?></div>
<?php elseif ($this->user->isRootUser()) : ?>
	<div><?php echo $this->translator()->_('user.delete.cannotDeleteRootUser'); ?></div>
<?php else : ?>
	<div>
		<?php echo sprintf($this->translator()->_('user.delete.confirm'), $this->user->user_name); ?>
	</div>
	
	<div class="dijitDialogPaneActionBar">
		<!-- YesButton -->
		<button data-dojo-type="dijit.form.Button" data-dojo-props="type: 'button'">
			<?php echo $this->translator()->_('global._share.yesMessage'); ?>
			<script type="dojo/method" data-dojo-event="onClick" data-dojo-args="e">
			dojo.xhrPost({
				url: "<?php echo $this->url(array(), 'core_user_delete'); ?>",
				content: {
					user_id: "<?php echo $this->user->user_id; ?>",
					format: "json"
				},
				handleAs: "json",
				load: function(data) {
					dojo.publish("/app/core/user/delete/onComplete", [ data ]);
				}
			});
			</script>
		</button>
		<!-- /YesButton -->
		
		<!-- NoButton -->
		<button data-dojo-type="dijit.form.Button" data-dojo-props="type: 'button'">
			<?php echo $this->translator()->_('global._share.noMessage'); ?>
			<script type="dojo/method" data-dojo-event="onClick" data-dojo-args="e">
			dojo.publish("/app/core/user/delete/onCancel");
			</script>
		</button>
		<!-- /NoButton -->
	</div>
<?php endif; ?>

<script type="text/javascript">
dojo.require("dijit.form.Button");
</script>
