			var _this = this;
			this.set("disabled", true);
			dojo.xhrPost({
				url: "<?php echo $this->url(array(), 'core_layout_edit'); ?>",
				content: dojo.formToObject("coreLayoutEditForm"),
				handleAs: "json",
				load: function(data) {
