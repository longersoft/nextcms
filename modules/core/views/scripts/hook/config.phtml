<div id="coreHookConfigContainer" data-dojo-type="dijit.layout.BorderContainer" data-dojo-props="design: 'sidebar', gutters: false, style: 'height: 100%; padding: 0; width: 100%'">
	<!-- Toolbar -->
	<div data-dojo-type="dijit.Toolbar" data-dojo-props="region: 'top', splitter: false">
		<button data-dojo-type="dijit.form.Button" data-dojo-props="type: 'submit', iconClass: 'appIcon appSaveIcon'">
			<?php echo $this->translator()->_('global._share.saveAction'); ?>
			<script type="dojo/method" data-dojo-event="onClick" data-dojo-args="e">
			var _this = this;
			_this.set("disabled", true);
			dojo.publish("/app/core/hook/config/onStart");
			dojo.xhrPost({
				url: "<?php echo $this->url(array(), 'core_hook_config'); ?>",
				content: dojo.formToObject("coreHookConfigForm"),
				handleAs: "json",
				load: function(data) {
					_this.set("disabled", false);
					var message = (data.result == "APP_RESULT_OK") 
								? dojox.string.sprintf("<?php echo $this->translator()->_('hook.config.success'); ?>", "<?php echo $this->name; ?>") 
								: dojox.string.sprintf("<?php echo $this->translator()->_('hook.config.error'); ?>", "<?php echo $this->name; ?>");
					dojo.publish("/app/global/notification", [{
						message: message,
						type: (data.result == "APP_RESULT_OK") ? "message" : "error"
					}]);
				}
			});
			</script>
		</button>
		
		<button data-dojo-type="dijit.form.Button" data-dojo-props="type: 'button', iconClass: 'appIcon appCancelIcon'">
			<?php echo $this->translator()->_('global._share.cancelAction'); ?>
			<script type="dojo/method" data-dojo-event="onClick" data-dojo-args="e">
			dojo.publish("/app/core/hook/config/onCancel");
			</script>
		</button>
	</div>
	<!-- /Toolbar -->
	
	<!-- HookConfigForm -->
	<div data-dojo-type="dijit.layout.BorderContainer" data-dojo-props="region: 'center', design: 'sidebar', gutters: false">
