				data-app-entity-props="<?php echo $this->encoder()->encode($user, array('user_id', 'user_name', 'status', 'role_id')); ?>">
				<div class="coreUserItemAvatar">
					<?php echo $this->avatar($user); ?>
				</div>
				
				<?php echo $user->user_name; ?>
			</div>
			<?php endforeach; ?>
			
			<?php endif; ?>
		</div>
	</div>
