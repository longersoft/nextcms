<script type="text/javascript">
dojo.require("dijit.form.Button");
dojo.require("dijit.form.Form");
dojo.require("dijit.form.Select");
dojo.require("dijit.form.SimpleTextarea");
dojo.require("dijit.form.TextBox");
dojo.require("dijit.form.ValidationTextBox");
dojo.require("dijit.layout.BorderContainer");
dojo.require("dijit.layout.ContentPane");
dojo.require("dijit.layout.TabContainer");
dojo.require("dijit.Toolbar");
dojo.require("dojo.dnd.Source");
dojo.require("dojox.grid.enhanced.plugins.GridSource");

dojo.registerModulePath("menu", "<?php echo $this->APP_STATIC_URL; ?>/modules/menu");
dojo.require("core.js.base.controllers.Subscriber");
dojo.require("menu.js.views.ItemTreeView");

dojo.addOnLoad(function() {
	var target = new dojox.grid.enhanced.plugins.GridSource("menuMenuAddLocalizedContainer", {
		isSource: false,
		insertNodesForGrid: false
	});
	dojo.connect(target, "onDropGridRows", function(grid, rowIndexes) {
		var sourceItems = [];
		dojo.forEach(rowIndexes, function(rowIndex, index) {
			var item = grid.getItem(rowIndex);
			if (item) {
				sourceItems.push(item);
			}
		});

		if (sourceItems.length > 0) {
			// Hide the guide
			dojo.style("menuMenuAddLocalizedHelp", "display", "none");
		}

		dojo.forEach(sourceItems, function(item) {
			var div = dojo.create("div", {
				className: "menuMenuAddLocalizedItem",
				style: "padding: 2px 8px"
			}, "menuMenuAddLocalizedContainer");

			new dijit.form.TextBox({
				value: item.title[0],
				style: "width: 300px",
				readOnly: true
			}).placeAt(div);
			
			new dijit.form.TextBox({
				value: item.language[0],
				style: "margin: 0 8px; width: 100px",
				readOnly: true
			}).placeAt(div);

			dojo.create("input", {
				name: "translations",
				type: "hidden",
				value: item.translations[0]
			}, div);

			new dijit.form.Button({
				label: "<?php echo $this->translator()->_('global._share.deleteAction'); ?>",
				onClick: function() {
					dojo.destroy(div);
					if (dojo.query(".menuMenuAddLocalizedItem", "menuMenuAddLocalizedContainer").length == 0) {
						// Show the guide
						dojo.style("menuMenuAddLocalizedHelp", "display", "block");
					}
				}
			}).placeAt(div);
		});
	});
	
	var handler = dojo.subscribe("/app/global/onLoadComplete/menu_menu_add", function() {
		var itemTreeView = new menu.js.views.ItemTreeView("menuMenuAddItemTreeContainer");
		<?php if ($this->sourceItems) : ?>
		itemTreeView.setItems(<?php echo $this->sourceItems; ?>);
		<?php endif; ?>

		// Quickly edit the node by dragging the node and dropping it on the form
		new dojo.dnd.Target("menuMenuAddItemFormContainer", {
			accept: ["treeNode"],
			onDropExternal: function(source, nodes, copy) {
				var treeNode = dijit.byNode(nodes[0]);
				if (treeNode) {
					if (treeNode.getTreePath().length == 2) {
						// User drop the root node
						// Do nothing
						// FIXME: Is there a better way to check if a node is the root one?
					} else {
						itemTreeView.onEditItem(treeNode.item);
					}
				}
			}
		});
		
		// Add new item handler
		dojo.connect(dijit.byId("menuMenuAddNewItemButton"), "onClick", function() {
			var item = {
				item_id: dojo.attr("menuMenuAddItemId", "value")
			};
			dojo.forEach(dijit.byId("menuMenuAddItemContainer").getChildren(), function(child) {
				if (name = child.get("itemProperty")) {
					item[name] = child.get("value");
				}
			});
			itemTreeView.saveItem(item);
		});

		// Edit item handler
		dojo.connect(itemTreeView, "onEditItem", function(/*dojo.data.Item*/ item) {
			// Change the label of "Add item" button
			dijit.byId("menuMenuAddNewItemButton").set("label", "<?php echo $this->translator()->_('global._share.saveAction'); ?>");
			
			// Populate data to the item form
			dojo.attr("menuMenuAddItemId", "value", item.item_id[0]);
			dojo.forEach(dijit.byId("menuMenuAddItemContainer").getChildren(), function(child) {
				if (name = child.get("itemProperty")) {
					if (item[name] && item[name][0]) {
						child.set("value", item[name][0]);
					}
				}
			});
		});

		// Submit form handler
		dojo.connect(dijit.byId("menuMenuAddSaveButton"), "onClick", function() {
			var items = itemTreeView.getItems();
			if (dijit.byId("menuMenuAddForm").validate()) {
				var params = dojo.formToObject("menuMenuAddForm");
				params.items = dojo.toJson(items);
				dojo.publish("/app/menu/menu/add/onStart");
				dojo.xhrPost({
					url: "<?php echo $this->url(array(), 'menu_menu_add'); ?>",
					content: params,
					handleAs: "json",
					load: function(data) {
						dojo.publish("/app/menu/menu/add/onComplete", [ data ]);
					}
				});
			}
		});

		dojo.unsubscribe(handler);
	});
});
</script>
