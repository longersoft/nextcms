<?php if ($this->numAlbums > 0) : ?>
<div class="mediaWidgetsAlbumsGrid">
	<?php if ($this->title) : ?><h2><?php echo $this->title; ?></h2><?php endif; ?>
	
	<ul>
		<?php foreach ($this->albums as $album) : ?>
		<li>
			<p>
				<a href="<?php echo $this->url($album->getProperties(), 'media_album_view'); ?>" title="<?php echo addslashes($album->title); ?>"><img src="<?php echo $album->getCover('square'); ?>" title="<?php echo addslashes($album->title); ?>" height="75" width="75" /></a>
			</p>
			<span><?php echo sprintf($this->translator()->_('show.numViews'), $album->num_views); ?></span>
		</li>
		<?php endforeach; ?>
	</ul>
</div>
<?php endif; ?>
