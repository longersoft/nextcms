<?php if ($this->numPhotos > 0) : ?>
<div class="mediaWidgetsPhotosThumbnail">
	<?php if ($this->title) : ?><h2><?php echo $this->title; ?></h2><?php endif; ?>
	
	<ul>
		<?php foreach ($this->photos as $photo) : ?>
		<li>
			<a href="<?php echo $this->url($photo->getProperties(), 'media_photo_view'); ?>" title="<?php echo addslashes($photo->title); ?>">
				<img src="<?php echo $photo->getThumbnail('small'); ?>" title="<?php echo addslashes($photo->title); ?>" />
			</a>
			<p>
				<?php echo sprintf($this->translator()->_('show.numDownloads'), $photo->num_downloads); ?> <span>|</span> <?php echo sprintf($this->translator()->_('show.numViews'), $photo->num_views); ?>
			</p>
		</li>
		<?php endforeach; ?>
	</ul>
</div>
<?php endif; ?>
