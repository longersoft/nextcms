				<?php echo sprintf($this->translator()->_('show.by'), $this->videos[0]->getAuthor()); ?> <span>|</span> <?php echo sprintf($this->translator()->_('show.numComments'), $this->videos[0]->num_comments); ?> <span>|</span> <?php echo sprintf($this->translator()->_('show.numViews'), $this->videos[0]->num_views); ?>
