<?php if ($this->numVideos > 0) : ?>
<div class="mediaWidgetsVideosMix">
	<?php if ($this->title) : ?><h1><?php echo $this->title; ?></h1><?php endif; ?>
	
	<div class="main">
		<div class="thumb">
			<a href="<?php echo $this->url($this->videos[0]->getProperties(), 'media_video_view'); ?>" title="<?php echo addslashes($this->videos[0]->title); ?>"><img src="<?php echo $this->videos[0]->getPoster('crop'); ?>" title="<?php echo addslashes($this->videos[0]->title); ?>" height="225" width="300" /></a>
