					<?php echo sprintf($this->translator()->_('show.by'), $this->videos[$i]->getAuthor()); ?><br />
					<?php echo sprintf($this->translator()->_('show.numComments'), $this->videos[$i]->num_comments); ?> <span>|</span> <?php echo sprintf($this->translator()->_('show.numViews'), $this->videos[$i]->num_views); ?>
