<?php if ($this->numArticles > 0) : ?>
<div class="contentWidgetsArticlesMix">
	<?php if ($this->title) : ?><h2><?php echo $this->title; ?></h2><?php endif; ?>
	
	<dl>
		<dt>
			<a href="<?php echo $this->articles[0]->getViewUrl(); ?>" title="<?php echo addslashes($this->articles[0]->title); ?>">
				<img src="<?php echo $this->articles[0]->getCover('thumbnail'); ?>" title="<?php echo addslashes($this->articles[0]->getCoverTitle()); ?>" />
			</a>
			<span>
				<a href="<?php echo $this->articles[0]->getViewUrl(); ?>" title="<?php echo addslashes($this->articles[0]->title); ?>"><?php echo $this->articles[0]->title; ?></a>
