				<cite><?php echo $this->dateFormatter()->diff(strtotime($this->articles[0]->activated_date), $this->timeDiffFormats); ?></cite>
			</span>
		</dt>
		
		<?php for ($i = 1; $i < $this->numArticles; $i++) : ?>
		<dd><a href="<?php echo $this->articles[$i]->getViewUrl(); ?>" title="<?php echo addslashes($this->articles[$i]->title); ?>"><?php echo $this->articles[$i]->title; ?></a></dd>
		<?php endfor; ?>
	</dl>
</div>
