<?xml version="1.0" encoding="UTF-8"?>
<layout>
	<borderContainer region="center">
		<borderContainer region="top">
			<gridContainer>
				<zone>
					<widget module="menu" name="menu" />
				</zone>
				<zone>
					<widget module="content" name="searchbox">
						<params>
							<param name="type" value="article" />
						</params>
					</widget>
				</zone>
			</gridContainer>
		</borderContainer>
		<borderContainer region="center">
			<gridContainer>
				<zone cssClass="c660">
					<mainContentPane />
				</zone>
				<zone cssClass="c300">
					<widget module="content" name="articles" title="Featured articles">
						<params>
							<param name="data_source" value="latest" />
							<param name="theme" value="list" />
							<param name="limit" value="4" />
							<param name="featured" value="1" />
						</params>
					</widget>
					<widget module="ad" name="banners" />
					<widget module="content" name="articles" title="Most viewed">
						<params>
							<param name="data_source" value="most_viewed" />
							<param name="theme" value="mostviewed" />
							<param name="limit" value="4" />
						</params>
					</widget>
					<widget module="content" name="articles" title="Most commented">
						<params>
							<param name="data_source" value="most_commented" />
							<param name="theme" value="mostcommented" />
							<param name="limit" value="4" />
						</params>
					</widget>
					<widget module="content" name="articles" title="Video news">
						<params>
							<param name="data_source" value="latest" />
							<param name="theme" value="video" />
							<param name="limit" value="4" />
							<param name="video" value="1" />
						</params>
					</widget>
					<widget module="content" name="articles" title="Photo news">
						<params>
							<param name="data_source" value="latest" />
							<param name="theme" value="photo" />
							<param name="limit" value="3" />
							<param name="photo" value="1" />
						</params>
					</widget>
				</zone>
			</gridContainer>
		</borderContainer>
	</borderContainer>
</layout>
